  <div class="row">
            <form id="createitem" class="button-size">
                <div class="col s4">
                Name: <textarea rows="1" cols="15" type="text" name="name"></textarea>
               </div>
               <div class="col s4">
                Movie Name: <textarea rows="1" cols="15" type="text" name="movie"></textarea>
        </div>
