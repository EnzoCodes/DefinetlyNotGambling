                Image <Link:im></Link:im>: <textarea rows="1" cols="15" type="text" name="image"></textarea>
               </div>

        <div class="input-field col s4">
    <select name="type">
        <option value="" disabled selected>Type</option>
        <option value="Small">Small</option>
        <option value="Plant Like">Plant Like</option>
        <option value="Insectesoid">Insectesoid</option>
        <option value="Space Dragons">Space Dragons</option>  
    </select>
        </div>

<div class="input-field col s4">
    <select name="category">
        <option value="" disabled selected>Category</option>
        <option value="Extra Terrestrials">Extra Terrestrials</option>
        <option value="Vampires">Vampires</option>
        <option value="Plants and Animals">Plants and Animals</option>
        <option value="Mutated Creatures">Mutated Creatures</option>
        <option value="Demons and Supernatural Forces">Demons and Supernatural Forces</option>
        <option value="Werewolves">Werewolves</option>
        <option value="Humans and Hominids">Humans and Hominids</option>
        <option value="The Living Dead">The Living Dead</option>
    </select>
</div>
            <div class="input-field col s4">
    <select name="tier">
        <option value="" disabled selected>Tier</option>
        <option value="4">4</option>
        <option value="3">3</option>
        <option value="2">2</option>
        <option value="1">1</option>  
    </select>
        </div>
